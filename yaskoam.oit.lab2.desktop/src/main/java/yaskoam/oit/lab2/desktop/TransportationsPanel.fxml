<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.SplitPane?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.DatePicker?>

<fx:root type="yaskoam.oit.lab2.desktop.TransportationsPanel" xmlns:fx="http://javafx.com/fxml/1"
         stylesheets="/yaskoam/oit/lab2/desktop/style.css">

    <SplitPane dividerPositions="0.7" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
               AnchorPane.topAnchor="0.0">

        <AnchorPane>
            <TableView fx:id="tableView" editable="true" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
                       AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>

                <columns>
                    <TableColumn text="Номер" fx:id="numberColumn"/>
                    <TableColumn text="Дата" fx:id="dateColumn" editable="true"/>
                    <TableColumn text="Код шофёра" fx:id="driverCodeColumn"/>
                    <TableColumn text="Код машины" fx:id="carCodeColumn"/>
                    <TableColumn text="Вес груза" fx:id="weightColumn"/>
                    <TableColumn text="Длина пути" fx:id="lengthColumn"/>
                </columns>

            </TableView>
        </AnchorPane>

        <AnchorPane minHeight="0.0" minWidth="0.0">
            <GridPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" percentWidth="100.0"/>
                </columnConstraints>

                <rowConstraints>
                    <RowConstraints percentHeight="10.0" vgrow="SOMETIMES"/>
                    <RowConstraints percentHeight="10.0"/>
                    <RowConstraints percentHeight="10.0"/>
                    <RowConstraints percentHeight="10.0"/>
                    <RowConstraints percentHeight="10.0"/>
                    <RowConstraints percentHeight="15.0"/>
                    <RowConstraints percentHeight="10.0"/>
                </rowConstraints>

                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                </padding>

                <VBox GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <Label text="Номер перевозки"/>
                    <TextField/>
                </VBox>
                <VBox GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <Label text="Дата перевозки"/>
                    <DatePicker maxWidth="Infinity"/>
                </VBox>
                <VBox GridPane.columnIndex="0" GridPane.rowIndex="2">
                    <Label text="Код шофёра"/>
                    <ComboBox maxWidth="Infinity"/>
                </VBox>
                <VBox GridPane.columnIndex="0" GridPane.rowIndex="3">
                    <Label text="Код машины"/>
                    <ComboBox maxWidth="Infinity"/>
                </VBox>
                <VBox GridPane.columnIndex="0" GridPane.rowIndex="4">
                    <Label text="Вес груза в тоннах"/>
                    <TextField/>
                </VBox>
                <VBox GridPane.columnIndex="0" GridPane.rowIndex="5">
                    <Label text="Длина пути в км."/>
                    <TextField/>
                </VBox>
                <VBox GridPane.columnIndex="0" GridPane.rowIndex="6">
                    <Button text="Сохранить" maxHeight="Infinity" maxWidth="Infinity" VBox.vgrow="ALWAYS"/>
                </VBox>
            </GridPane>
        </AnchorPane>

    </SplitPane>

</fx:root>